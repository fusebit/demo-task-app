{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "libc",
    "baseUrl": ".",
    "jsx": "react",
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "presets": ["@babel/preset-react"],
  "include": ["src/**/*", "public/**/*"]
}
